<odoo>
    <record id="assign_task_form_view" model="ir.ui.view">
        <field name="name">Assign Task Form</field>
        <field name="model">assign.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>
                        <field name="task_ids" invisible="True"/>
                        <field name="assign_to" />
                    </group>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" />
                        <button special="cancel" string="Cancel" class="btn-secondary" />
                    </footer>
                </sheet>

            </form>
        </field>
    </record>

    <record id="assign_task_action" model="ir.actions.act_window">
        <field name="name">Assign Task Action</field>
        <field name="res_model">assign.task</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

</odoo>