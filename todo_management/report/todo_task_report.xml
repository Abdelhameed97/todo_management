<odoo>

    <!-- تعريف التقرير -->
    <record id="action_report_todo_task" model="ir.actions.report">
        <field name="name">Todo Task Report</field>
        <field name="model">todo.task</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="binding_type">report</field>
        <field name="report_name">todo_management.report_todo_task</field>
        <field name="report_file">todo_management.report_todo_task</field>
        <field name="print_report_name">'Task - %s' % (object.task_name)</field>
<!--        <field name="print_report_name">"Task - %(task_name)s"</field>-->
    </record>

    <!-- قالب التقرير -->
    <template id="report_todo_task">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <main>
                        <div class="page">

                            <!-- هيدر الشركة -->
                            <div style="border:1px solid #000; padding:10px; margin-bottom:20px; font-family: lobster-bold;">
                                <strong>Company logo</strong><br/>
                                Address<br/>
                                Phone
                            </div>

                            <!-- تفاصيل المهمة -->
                            <div style="font-family: lobster-bold; border:1px solid #000; padding:10px; margin-bottom:20px;">
                                <p><strong style="font-family: lobster-bold;">TASK:</strong> <t t-esc="doc.task_name"/></p>
                                <p><strong style="font-family: lobster-bold;">Due Date:</strong> <t t-esc="doc.due_date"/></p>
                                <p><strong style="font-family: lobster-bold;">Assign To:</strong> <t t-esc="doc.assign_to.name"/></p>
                                <p><strong style="font-family: lobster-bold;">Estimated Time:</strong> <t t-esc="doc.estimated_time"/> H</p>

                                <p><strong style="font-family: lobster-bold">Description:</strong></p>
                                <p style="font-family: lobster-regular"><t t-esc="doc.description"/></p>
                            </div>

                            <!-- جدول التايم شيت -->
                            <div style="border:1px solid #000; padding:10px;">
                                <h4 style="font-family: lobster-bold; text-align:center;">Timesheet</h4>
                                <table class="table table-sm table-bordered"
                                       style="width:100%; border-collapse: collapse;" border="1">
                                    <thead>
                                        <tr>
                                            <th style="width:5%; font-family: lobster-bold;">#</th>
                                            <th style="width:20%; font-family: lobster-bold;">Date</th>
                                            <th style="width:55%; font-family: lobster-bold;">Description</th>
                                            <th style="width:20%; font-family: lobster-bold;">Time</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="doc.lines_ids" t-as="line">
                                            <tr>
                                                <td style="font-family: lobster-regular;"><t t-esc="line_index + 1"/></td>
                                                <td style="font-family: lobster-regular;"><t t-esc="line.date"/></td>
                                                <td style="font-family: lobster-regular;"><t t-esc="line.description"/></td>
                                                <td style="font-family: lobster-regular;"><t t-esc="line.time"/> H</td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td colspan="3" style="text-align:right;"><strong style="font-family: lobster-bold;">Total Time</strong></td>
                                            <td style="font-family: lobster-regular;"><t t-esc="doc.spent_time"/> h</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <!-- الفوتر -->
                            <div style="margin-top:20px; text-align:center; font-family: lobster-bold;">
                                Company email, phone, register number
                            </div>

                        </div>
                    </main>
                </t>
            </t>
        </t>
    </template>

</odoo>
