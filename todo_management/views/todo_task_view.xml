<odoo>
    <record id="todo_task_tree_view" model="ir.ui.view">
        <field name="name">To Do List</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <list class="todo_task_list" decoration-danger="(is_late)">
                <field name="task_name" />
                <field name="assign_to" />
                <field name="description" />
                <field name="estimated_time" />
                <field name="spent_time" />
                <field name="due_date" />
                <field name="is_late" invisible="1" optional="1" />
                <field name="status" />
                <field name="active" invisible="1" optional="1"/>
            </list>
        </field>
    </record>

    <record id="todo_task_form_view" model="ir.ui.view">
        <field name="name">To Do Form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
<!--                    <widget name="web_ribbon" title="Completed" bg_color="text-bg-success" invisible="status == 'completed'" />-->
                    <header>

                        <button name="get_tasks" type="object" class="btn-danger mx-1" string="Call All Tasks"/>
                        <button name="action_new" type="object"
                            class="btn-primary mx-1" string="New"
                            invisible="status in ['new', 'in_progress', 'completed', 'closed'] "
                        />
                        <button name="action_in_progress" type="object"
                                class="btn-warning mx-1" string="In Progress"
                                invisible="status in ['in_progress', 'completed', 'closed'] "
                        />
                        <button name="action_completed" type="object"
                                class="btn-success mx-1" string="Completed"
                                invisible="status in ['new','completed', 'closed'] "
                        />
                        <field name="status" widget="statusbar" />
                    </header>
                    <div class="oe_title">
                        <label for="ref" />
                        <h1>
                            <field name="ref" />
                        </h1>
                         <label for="task_name" />
                        <h3>
                            <field name="task_name" readonly="status in ('completed', 'closed')"/>
                        </h3>
                    </div>
                    <group>
                        <group string="Main Info">
                            <field name="assign_to" readonly="status in ('completed', 'closed')"/>
                            <field name="description" />
                            <field name="due_date" readonly="status in ('completed', 'closed')"/>
                        </group>
                        <group string="Partial Info">
                            <field name="estimated_time" readonly="status in ('completed', 'closed')"/>
                            <field name="spent_time" />
                            <field name="progress" widget="progressbar" />

                            <field name="status" invisible="True" />
                            <field name="active" invisible="1" />

                        </group>

                        <notebook>
                            <page string="Timesheet">
<!--                                <field name="lines_ids" />-->
                                <field name="lines_ids" readonly="status in ('completed', 'closed')">
                                    <list editable="bottom">
                                        <field name="date" required="1"/>
                                        <field name="description" required="1" />
                                        <field name="time" required="1" />
                                    </list>
                                </field>
                            </page>
                        </notebook>

                    </group>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids" />-->
<!--                    <field name="activity_ids" />-->
<!--                    <field name="message_ids" />-->
<!--                </div>-->
                    <chatter />
                </sheet>

            </form>
        </field>
    </record>

    <record id="todo_task_search_view" model="ir.ui.view">
        <field name="name">To Do Search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_name" />
                <field name="assign_to" />

                <filter name="new_task" string="New Tasks" domain="[('status', '=', 'new')]" />
                <filter name="in_progress_task" string="In Progress Tasks" domain="[('status', '=', 'in_progress')]" />
                <filter name="completed_task" string="Completed Tasks" domain="[('status', '=', 'completed')]" />

                <filter name="group_assign_to" string="Assign To" context="{'group_by' : 'assign_to'}" />
                <filter name="group_status" string="Status" context="{'group_by' : 'status'}" />
                <filter name="group_due_date" string="Due Date" context="{'group_by' : 'due_date'}" />

            </search>
        </field>
    </record>

    <record id="todo_task_action" model="ir.actions.act_window">
        <field name="name">Task Action</field>
        <field name="res_model">todo.task</field>
    </record>

    <record id="close_task_action_server" model="ir.actions.server">
        <field name="name" >Close</field>
        <field name="model_id" ref="model_todo_task" />
        <field name="binding_model_id" ref="model_todo_task" />
        <field name="state">code</field>
        <field name="code">
            action = records.close_task()
        </field>
    </record>

    <record id="assign_task_action_server" model="ir.actions.server">
        <field name="name" >Assign To</field>
        <field name="model_id" ref="model_todo_task" />
        <field name="binding_model_id" ref="model_todo_task" />
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_assign_task()
        </field>
    </record>

    <record id="auto_check_due_date_cron" model="ir.cron">
        <field name="name">ToDo Task: check due date</field>
        <field name="model_id" ref="model_todo_task" />
        <field name="state">code</field>
        <field name="code">model.check_due_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>

    <menuitem id="all_tasks_menu_item"
              name="All Tasks"
              parent="to_do_menu_item"
              action="todo_task_action"
    />
</odoo>